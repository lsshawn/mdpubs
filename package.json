{
  "name": "mdpubs",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:feedback:push": "drizzle-kit push --config=drizzle.feedback.config.ts",
    "db:feedback:migrate": "drizzle-kit migrate --config=drizzle.feedback.config.ts",
    "db:feedback:studio": "drizzle-kit studio --config=drizzle.feedback.config.ts"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.1",
    "@eslint/js": "^9.39.2",
    "@iconify/svelte": "^5.2.1",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@pilcrowjs/object-parser": "^0.0.4",
    "@sveltejs/adapter-vercel": "^5.10.3",
    "@sveltejs/kit": "^2.50.0",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/marked": "^6.0.0",
    "@types/node": "^20.19.30",
    "daisyui": "^5.5.14",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^16.5.0",
    "marked": "^16.4.2",
    "prettier": "^3.8.0",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "svelte": "^5.46.4",
    "svelte-check": "^4.3.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^6.4.1",
    "vite-plugin-devtools-json": "^0.2.1"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@types/mailgun-js": "^0.22.19",
    "arctic": "^3.7.0",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.40.1",
    "lucide-svelte": "^0.522.0",
    "mailgun.js": "^12.6.1",
    "nanoid": "^5.1.6",
    "stripe": "^18.5.0",
    "zod": "^3.25.76"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
